---
/* @import components */
import Section from '@/components/Section.astro';

/* @import icons */
import Github from '@/icons/Github.astro';
import Css from '@/icons/Css.astro';
import Codeigniter from '@/icons/Codeigniter.astro';
import Php from '@/icons/Php.astro';
import React from '@/icons/React.astro';
import TailwindCss from '@/icons/TailwindCss.astro';
import Python from '@/icons/Python.astro';
---

<Section title='Proyectos'>
  <div class='flex flex-col mb-2'>
    <!-- Sneakers Store -->
    <div class="mb-3">
      <div class='inline-flex gap-2'>
        <span class='font-semibold text-md mb-1'>Sneakers Store</span>
      <span class='text-green-600'>◉</span>
      </div>
      <div class='flex flex-row w-full text-sm mb-1'>
        <p class='text-pretty'>Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis nemo veniam vit modi vel eaque fugiat, laborum animi commodi.</p>
        <span class='inline-flex justify-center items-center hover:text-gray-600 cursor-pointer ml-3 mb-2'>
        <a class='font-bold bg-black text-white rounded-full p-2' href='https://github.com/Alexisxde/snakers-store' target='_blank'><Github/></a>
        </span>
      </div>
      <div class='flex justify-start items-center gap-5'>
        <span class='text-black'><Php/></span>
        <span class='text-black'><Css/></span>
        <span class='text-black'><Codeigniter/></span>
      </div>
    </div>
    <!-- Proyecto Integrador Argentina Programa 4.0 -->
    <div class="mb-3">
      <div class='inline-flex gap-2'>
        <span class='font-semibold text-md mb-1'>Proyecto Integrador Argentina Programa 4.0</span>
        <span class='text-red-600'>◉</span>
      </div>
      <div class='flex flex-row w-full text-sm mb-1'>
        <p class='text-pretty'>Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis nemo veniam vit modi vel eaque fugiat, laborum animi commodi.</p>
        <span class='inline-flex justify-center items-center hover:text-gray-600 cursor-pointer ml-3 mb-2'>
        <a class='font-bold bg-black text-white rounded-full p-2' href='https://github.com/Alexisxde/tp-arg-programa' target='_blank'><Github/></a>
        </span>
      </div>
      <div class='flex justify-start items-center gap-5'>
        <span class='text-black'><React/></span>
        <span class='text-black'><TailwindCss/></span>
        <span class='text-black'><Python/></span>
      </div>
    </div>
  </div>
</Section>