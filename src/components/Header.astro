---
/* @import components */
import Section from '@/components/Section.astro';

/* @import icons */
import World from '@/icons/World.astro';
import Github from '@/icons/Github.astro';
import Email from '@/icons/Email.astro';
import Phone from '@/icons/Phone.astro';

/* @import json */
import { basics } from '@cv'

const { name, label, email, phone, description, location, github  } = basics
const { city, region  } = location
---

<Section>
  <h1 class='font-bold text-3xl mb-2'>{name}</h1>
  <p class='text-sm text-pretty mb-1'><span class='font-bold bg-black text-white rounded px-1'>{label}</span> {description}</p>
  <span class='text-gray-600 text-sm inline-flex justify-center items-center gap-2 mb-2'><World/> {city}, {region}</span>
  <div class='inline-flex justify-center items-center gap-2'>
    <a 
      href={`mailto:${email}`} 
      title={`Enviar un correo electrónico a ${name} al correo ${email}`}
      target='_blank'
      class='text-white bg-black p-2 rounded'>
      <Email />
    </a>
    <a 
      href={`tel:${phone}`} 
      title={`Llamar por teléfono a ${name} al número ${phone}`}
      target='_blank'
      class='text-white bg-black p-2 rounded'>
      <Phone/>
    </a>
    <a 
      href={`${github}`}  
      title={`Gihub de ${name}`}
      target='_blank'
      class='text-white bg-black p-2 rounded'>
    <Github/>
    </a>
  </div>
</Section>
